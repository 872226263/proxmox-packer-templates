# Proxmox connection settings
# Copy this file to credentials.pkrvars.hcl and fill in your values

proxmox_host         = "127.0.0.1:8006"    # Proxmox IP:Port (use 127.0.0.1 if running on PVE host)
proxmox_user         = "root@pam"          # or packer@pve!packer-token
proxmox_password     = "your-password"     # leave empty if using token
proxmox_token        = ""                  # API token (optional)
proxmox_insecure_tls = true                # skip TLS verification
node                 = "ml1"               # Proxmox node name

# Storage settings
disk_storage_pool       = "local-lvm"      # VM disk storage (must support images)
disk_format             = "raw"            # LVM thin only supports raw format
iso_storage_pool        = "local"          # ISO file storage
cloud_init_storage_pool = "local-lvm"      # Cloud-Init storage
